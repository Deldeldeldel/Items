@model IEnumerable<Items.Models.Item>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Tavarat</h1>

<h2>Hae</h2>

<form asp-controller="Home" asp-action="Hae">
    <p>
        Hakusana: <input type="text" name="SearchString">
        <input type="submit" value="Hae" />
    </p>
</form>

<h2>Poista</h2>

<form asp-controller="Home" asp-action="Poista">
    <p>
        Poista tavara, jonka numero on <input type="text" name="itemId">
        <input type="submit" value="Poista" />
    </p>
</form>

<form asp-controller="Home" asp-action="Lisaa">
    <p>
        Lisää tavara
        
        <input type="text" name="itemName" label="Name">
        <input type="text" name="itemLocation" label="Location">
        <input type="text" name="itemClass" label="Class">
        <input type="submit" value="Lisää" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Tavaran numero
            </th>
            <th>
                Nimi
            </th>
            <th>
                Paikka
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemLocation)
            </td>
        </tr>
        }
    </tbody>
</table>



